<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project2_khanacad">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">

        <!-- AdMob App ID (TEST) -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>

        <!-- LAUNCHER -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- AUTH -->
        <activity android:name=".LoginActivity"/>
        <activity android:name=".SignupActivity"/>

        <!-- DASHBOARD -->
        <activity android:name=".DashboardActivity"/>

        <!-- FEATURES -->
        <activity android:name=".QRScannerActivity"/>
        <activity android:name=".CaptureActivityPortrait"
            android:screenOrientation="portrait"/>

        <activity android:name=".UsersActivity" android:exported="false"/>
        <activity android:name=".ChatActivityRT" android:exported="false"/>
        <activity android:name=".ChatActivity" android:exported="false"/>


    </application>
</manifest>
